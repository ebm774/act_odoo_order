<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_supplier_status_wizard_form" model="ir.ui.view">
        <field name="name">supplier.status.wizard.form</field>
        <field name="model">ord.supplier.status.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group string="Supplier Information">
                        <field name="supplier_id" readonly="1"/>
                    </group>
                </group>

                <group string="Change Information">
                    <field name="status_reason"
                           placeholder="Why are you making this change?"
                           required="1"/>
                    <field name="manual_status" invisible="1"/>
                    <div class="alert alert-info" role="alert"
                         invisible="manual_status_override == False">
                        <strong>Manual Override Active:</strong>
                        Status has been manually set and won't be automatically updated based on criteria.
                    </div>
                     <field name="manual_status_override" readonly="status_reason == False"/>
                    <field name="status"
                           readonly="manual_status_override == False"
                           widget="selection"
                           options="{'no_open': True, 'no_create': True}"/>

                </group>

                <group string="Validation Criteria">
                    <field name="price" readonly="status_reason == False"/>
                    <field name="delivery" readonly="status_reason == False"/>
                    <field name="after_sale" readonly="status_reason == False"/>
                    <field name="bill" readonly="status_reason == False"/>
                </group>

                <footer>
                    <button name="action_save_changes"
                            type="object"
                            string="Save Changes"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_supplier_status_wizard" model="ir.actions.act_window">
        <field name="name">Edit Supplier Status</field>
        <field name="res_model">ord.supplier.status.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_ord_supplier"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>