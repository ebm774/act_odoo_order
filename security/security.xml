<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="group_order_dev" model="res.groups">
            <field name="name">Order developer</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>


        <record id="group_order_user" model="res.groups">
            <field name="name">Order user</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_order_dir" model="res.groups">
            <field name="name">Order director</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_order_approver" model="res.groups">
            <field name="name">Order Approver</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_order_viewer" model="res.groups">
            <field name="name">Order Viewer</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!--
        This rule handles department-based visibility:
        - Direction users see all orders
        - Other users see orders from their department
        - Users always see orders they created
        -->

        <record id="rule_ord_main_ldap_user_access" model="ir.rule">
            <field name="name">Orders: LDAP User Access</field>
            <field name="model_id" ref="model_ord_main"/>
            <field name="domain_force">[
                '|',
                ('department_id', '=', user.department_id.id),
                ('owner_id', '=', user.id)
            ]</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Rule for LDAP order approvers (ID: 27): extended access -->
        <record id="rule_ord_main_ldap_approver_access" model="ir.rule">
            <field name="name">Orders: LDAP Approver Access</field>
            <field name="model_id" ref="model_ord_main"/>
            <field name="domain_force">[
                '|', '|',
                ('department_id', '=', user.department_id.id),
                ('owner_id', '=', user.id),
                ('approver_id', '=', user.id)
            ]</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Rule for manually created direction group: full access -->
        <record id="rule_ord_main_direction_full_access" model="ir.rule">
            <field name="name">Orders: Direction Full Access</field>
            <field name="model_id" ref="model_ord_main"/>
            <field name="groups" eval="[(4, ref('group_order_dir'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="active" eval="True"/>
        </record>


    </data>
</odoo>