        <!-- Record rule: Management sees everything -->
        <record id="rule_ord_main_management_access" model="ir.rule">
            <field name="name">Orders: Management Full Access</field>
            <field name="model_id" ref="model_ord_main"/>
            <field name="groups" eval="[(4, ref('group_order_dir')), (4, ref('group_order_approver'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <!-- Record rule: Approvers can see orders they need to approve -->
        <record id="rule_ord_main_approver_access" model="ir.rule">
            <field name="name">Orders: Approver Access</field>
            <field name="model_id" ref="model_ord_main"/>
            <field name="groups" eval="[(4, ref('group_order_approver'))]"/>
            <field name="domain_force">[
                '|',
                ('approver_id', '=', user.id),
                (1, '=', 1)  # Approvers see all (management role)
            ]</field>
        </record>
    </data>
