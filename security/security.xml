<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="group_order_dev" model="res.groups">
            <field name="name">Order developer</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>


        <record id="group_order_user" model="res.groups">
            <field name="name">Order user</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_order_dir" model="res.groups">
            <field name="name">Order director</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_order_approver" model="res.groups">
            <field name="name">Order Approver</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_order_viewer" model="res.groups">
            <field name="name">Order Viewer</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        
