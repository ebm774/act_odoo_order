<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List/Tree View -->
    <record id="view_ord_main_list" model="ir.ui.view">
        <field name="name">ord.main.list</field>
        <field name="model">ord.main</field>
        <field name="arch" type="xml">
            <list default_order="creation_date desc">
                <field name="reference"/>
                <field name="owner_id" widget="many2one_avatar_user"/>
                <field name="ticket_subject"/>
                <field name="type" widget="badge"
                       decoration-primary="type == 'material'"
                       decoration-info="type == 'service'"/>
                <field name="department_id"/>
                <field name="supplier_id"/>
                <field name="approver_id" widget="many2one_avatar_user"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ord_main_search" model="ir.ui.view">
        <field name="name">ord.main.search</field>
        <field name="model">ord.main</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference"/>
                <field name="owner_id"/>
                <field name="ticket_subject"/>
                <field name="supplier_id"/>
                <field name="department_id"/>
                <field name="approver_id"/>

                <!-- Filters -->
                <filter name="my_orders" string="My Orders"
                        domain="[('owner_id', '=', uid)]"/>
                <filter name="material" string="Material Orders"
                        domain="[('type', '=', 'material')]"/>
                <filter name="service" string="Service Orders"
                        domain="[('type', '=', 'service')]"/>

                <separator/>
                <filter name="today" string="Today"
                        domain="[('creation_date', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                <filter name="this_week" string="This Week"
                        domain="[('creation_date', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter name="group_by_type" string="Type" context="{'group_by': 'type'}"/>
                    <filter name="group_by_owner" string="Owner" context="{'group_by': 'owner_id'}"/>
                    <filter name="group_by_approver" string="Approver" context="{'group_by': 'approver_id'}"/>
                    <filter name="group_by_department" string="department" context="{'group_by': 'department_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View (basic) -->
    <record id="view_ord_main_form" model="ir.ui.view">
        <field name="name">ord.main.form</field>
        <field name="model">ord.main</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" placeholder="Order Reference"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Order Information">
                            <field name="creation_date"/>
                            <field name="type"/>
                        </group>
                        <group string="People">
                            <field name="owner_id" readonly="1"/>
                            <field name="approver_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Details">
                            <field name="department_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="supplier_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="ticket description">
                            <group>
                                <field name="ticket_subject" string="Subject"/>
                                <field name="ticket_description" string="Description"/>
                            </group>
                        </page>

                        <page string="Attachments">
                            <field name="attachment_ids" context="{'default_order_id': id}">
                                <list>
                                    <field name="filename" readonly="1"/>
                                    <field name="size_mb"/>
                                    <field name="extension" readonly="1"/>
                                    <field name="date"/>
                                </list>
                                <form>
                                    <group>
                                        <group>
                                            <field name="filename" required="1"/>
                                            <field name="extension" readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="size_mb" readonly="1"/>
                                            <field name="date" readonly="1"/>
                                        </group>
                                    </group>
                                    <group string="File">
                                        <field name="file" filename="filename" required="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ord_main_list" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">ord.main</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ord_main_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No orders created yet
            </p>
            <p>
                Create your first order request to get started.
            </p>
        </field>
    </record>
</odoo>