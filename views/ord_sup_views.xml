    <!-- Form View -->
    <record id="view_ord_supplier_form" model="ir.ui.view">
        <field name="name">ord.supplier.form</field>
        <field name="model">ord.supplier</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Supplier Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Contact Information">
                            <field name="phone" />
                            <field name="mail" />
                            <field name="contact_name" />
                        </group>
                        <group string="Address">
                            <field name="street" />
                            <field name="number" />
                            <field name="city" />
                        </group>
                        <group>
                            <field name="status_id" readonly="not id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

       <!-- Search View -->
    <record id="view_ord_supplier_search" model="ir.ui.view">
        <field name="name">ord.supplier.search</field>
        <field name="model">ord.supplier</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="order_count"/>
                <field name="contact_name"/>
                <field name="phone"/>
                <field name="mail"/>
            </search>
        </field>
    </record>


    <!-- Action -->
    <record id="action_ord_supplier" model="ir.actions.act_window">
        <field name="name">Suppliers</field>
        <field name="res_model">ord.supplier</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ord_supplier_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No orders created yet
            </p>
            <p>
                Create your first order request to get started.
            </p>
        </field>
    </record>
</odoo>