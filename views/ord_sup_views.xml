<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List view -->
    <record id="view_ord_supplier_list" model="ir.ui.view">
        <field name="name">ord.supplier.list</field>
        <field name="model">ord.supplier</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="contact_name" />
                <field name="phone" />
                <field name="mail" />
                <field name="status_id"/>
                <field name="order_count"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ord_supplier_form" model="ir.ui.view">
        <field name="name">ord.supplier.form</field>
        <field name="model">ord.supplier</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Supplier Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Contact Information">
                            <field name="phone" />
                            <field name="mail" />
                            <field name="contact_name" />
                        </group>
                        <group string="Address">
                            <field name="street" />
                            <field name="number" />
                            <field name="city" />
                        </group>
                        <group string="Status" invisible="not id">
                            <field name="current_status" readonly="1"
                               widget="badge"
                               decoration-success="current_status == 'approved'"
                               decoration-warning="current_status == 'new'"
                               decoration-danger="current_status == 'non-approved'"/>

                            <button name="action_open_status_wizard"
                                    type="object"
                                    string="Edit Status"
                                    class="btn-primary"
                                    icon="fa-edit"/>
                        </group>
                    </group>
                    <notebook invisible="not id">
                       <page string="Change History">
                           <field name="status_log_ids" readonly="1">
                               <list>
                                   <field name="change_date"/>
                                   <field name="user_id"/>
                                   <field name="changes"/>
                                   <field name="reason"/>
                               </list>
                           </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


       <!-- Search View -->
    <record id="view_ord_supplier_search" model="ir.ui.view">
        <field name="name">ord.supplier.search</field>
        <field name="model">ord.supplier</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="order_count"/>
                <field name="contact_name"/>
                <field name="phone"/>
                <field name="mail"/>
            </search>
        </field>
    </record>


    <!-- Action -->
    <record id="action_ord_supplier" model="ir.actions.act_window">
        <field name="name">Suppliers</field>
        <field name="res_model">ord.supplier</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ord_supplier_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No orders created yet
            </p>
            <p>
                Create your first order request to get started.
            </p>
        </field>
    </record>
</odoo>