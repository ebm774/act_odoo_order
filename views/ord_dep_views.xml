<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List view -->
    <record id="view_ord_department_list" model="ir.ui.view">
        <field name="name">ord.department.list</field>
        <field name="model">ord.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="viewer_group_id" readonly="1"/>
                <field name="user_count"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ord_department_form" model="ir.ui.view">
        <field name="name">ord.department.form</field>
        <field name="model">ord.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Department Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Department Information">
                            <field name="viewer_group_id" readonly="1" options="{'no_open': True}"/>
                            <field name="user_count" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Users">
                            <field name="user_ids" options="{'no_create': True, 'no_create_edit': True}">
                                <list>
                                    <field name="name"/>
                                    <field name="login"/>
                                    <field name="email"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

       <!-- Search View -->
    <record id="view_ord_department_search" model="ir.ui.view">
        <field name="name">ord.department.search</field>
        <field name="model">ord.department</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="viewer_group_id"/>
                <field name="user_ids"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_group" string="Group Name" context="{'group_by': 'viewer_group_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Action -->
    <record id="action_ord_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">ord.department</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ord_department_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No orders created yet
            </p>
            <p>
                Create your first order request to get started.
            </p>
        </field>
    </record>
</odoo>